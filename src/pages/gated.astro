---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

const pages = await getCollection('pages');

const aboutPage = pages.find((page: CollectionEntry<'pages'>) => page.data.title.toLowerCase() === 'gated');

if (!aboutPage) {
  throw new Error('About page not found.');
}
---

<Layout>
  <h1>{aboutPage.data.title}</h1>
  <img src={aboutPage.data.thumbnail} alt="Featured Image" />
  <div >{aboutPage.rendered?.html}</div>
</Layout>
